# App Configuration
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=bot_mail_proposal

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Gmail API
GMAIL_CREDENTIALS_PATH=credentials/credentials.json
GMAIL_TOKEN_PATH=credentials/token.json

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Azure OpenAI Configuration (if using Azure instead of OpenAI)
USE_AZURE_AI=False
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-05-15

# LangChain Settings
LANGCHAIN_MODEL=gpt-3.5-turbo
LANGCHAIN_TEMPERATURE=0.7

# Email Processing Settings
EMAIL_FETCH_LIMIT=10
EMAIL_PROCESSING_INTERVAL=60

# Security
ENCRYPTION_KEY=your-encryption-key
HASH_PASSWORD_KEY=your-hash-password-key 